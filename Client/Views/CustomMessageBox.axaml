<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Client.Views.CustomMessageBox"
        Title="Message"
        Width="300" Height="600">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
        <!-- Текстовое сообщение -->
        <TextBlock x:Name="MessageText" HorizontalAlignment="Center" Margin="0,20,0,20" Text="Добро пожаловать в игру!" />

        <!-- Вопрос над текстовым полем -->
        <TextBlock Text="Как тебя зовут?" HorizontalAlignment="Center" Margin="0,5"/>

        <!-- Текстовое поле для ввода с Watermark -->
        <TextBox x:Name="UserInputTextBox" Width="200" Margin="5" HorizontalAlignment="Center" Watermark="Введите ваше имя"/>

        <!-- Вопрос для выбора цвета -->
        <TextBlock Text="Выбери цвет" HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Контейнер для радиокнопок выбора цвета -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="5">
            <!-- Радиокнопки для выбора цвета -->
            <RadioButton Content="Красный" Background="Red" Foreground="White" HorizontalAlignment="Center"/>
            <RadioButton Content="Синий" Background="Blue" Foreground="White" HorizontalAlignment="Center"/>
            <RadioButton Content="Зеленый" Background="Green" Foreground="White" HorizontalAlignment="Center"/>
            <RadioButton Content="Желтый" Background="Yellow" Foreground="Black" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Кнопка для закрытия окна -->
        <Button Content="OK" HorizontalAlignment="Center" Width="80" Click="OnOkButtonClick"/>
    </StackPanel>

</Window>


